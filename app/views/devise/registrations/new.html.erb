<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="initial-scale=1, width=device-width" />

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tags %>

    <link rel="stylesheet" href="./global.css" />
    <%= stylesheet_link_tag 'pages/sign_up_page', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Krona One:wght@400&display=swap"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Space Grotesk:wght@700&display=swap"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500&display=swap"
    />
  </head>
  <body>
    <div class="sign-up-page">
  <main class="bg4">
    <div class="bg-child1"></div>
    <div class="sign-up-container">
      <div class="logo-mini-container">
        <div class="logo-mini1">
          <div class="countrol1">Countrol</div>
        </div>
      </div>
    </div>
    <div class="logo-mini2">
      <div class="bankist">
        <p class="countrol2">Countrol</p>
      </div>
    </div>
    <div class="create-account-button">
      <div class="full-name-input-parent">
        <div class="full-name-input">
          <h1 class="create-your-account-container">
            <p class="create">Create</p>
            <p class="your-account1">your account</p>
          </h1>
        </div>
        <div class="lets-safe-your-container">
          <p class="lets-safe-your">
            Let's safe your transfer money our bank.
          </p>
          <p class="enter-your-details">Enter your details to sign up.</p>
        </div>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="frame-container">
            <div class="full-name-container-parent">
              <div class="full-name-container">
                <div class="bg5">
                  <div class="bg-child2"></div>
                  <%= f.input :full_name,
                              required: true,
                              autofocus: true,
                              label: false,
                              placeholder: "Full Name",
                              input_html: { class: "full-name" } %>
                  <div class="icon-frame">
                    <%= image_tag 'icon1.svg', class: 'icon2', alt: '' %>
                  </div>
                </div>
              </div>
              <div class="full-name-container1">
                <div class="bg6">
                  <div class="bg-child3"></div>
                  <%= f.input :email,
                              required: true,
                              label: false,
                              placeholder: "Email...",
                              input_html: { class: "email1" } %>
                  <div class="frame-div">
                    <%= image_tag 'icon.png', class: 'icon3', alt: '' %>
                  </div>
                </div>
              </div>
              <div class="full-name-container2">
                <div class="bg7">
                  <div class="bg-child4"></div>
                  <%= f.input :password,
                              required: true,
                              hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                              label: false,
                              placeholder: "Password",
                              input_html: { class: "password1" } %>
                  <div class="icon-wrapper1">
                    <%= image_tag 'icon-1.svg', class: 'icon4', alt: '' %>
                  </div>
                </div>
              </div>
              <div class="bg8">
                <div class="bg-child5"></div>
                <%= f.input :password_confirmation,
                            required: true,
                            label: false,
                            placeholder: "Confirm Password",
                            input_html: { class: "confirm-password" } %>
                <div class="background-sign-up">
                  <%= image_tag 'icon-3.svg', class: 'icon5', alt: '' %>
                </div>
              </div>
              <div class="forgot-password-container">
                <div class="forgot-password1">Forgot Password?</div>
              </div>
            </div>
          </div>
          <div class="sign-up-button">
            <%= f.button :submit, "Sign Up", class: "button1" %>
          </div>
        <% end %>
        <div class="text-container">
          <div class="text1" id="textContainer">
            <div class="already-have-an-container">
              <span class="already-have-an">Already have an account? </span>
              <%= link_to "Sign In", new_session_path(resource_name), class: "sign-in2" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>